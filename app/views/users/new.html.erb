
<div class="form-wrapper">
  <div class="form-header">
    <h1 class="signup-h1">Join Speedcoder</h1>
    <h2>Create your Account</h2>
  </div>

  <div class="user-forms">

    <%= form_tag '/users', method: 'post' do%>

      <input type="text" name="name" placeholder="Name" value="<%= @user.name %>">
      <p class="danger"><%= @errors[:name] %></p>
      <input type="email" name="email" placeholder="Email" value="<%= @user.email %>">
      <p class="danger"><%= @errors[:email] %></p>
      <input type="text" name="username" placeholder="Username" value="<%= @user.username %>">
      <p class="danger"><%= @errors[:username] %></p>
      <input type="password" name="password" placeholder="Password" >
      <p class="danger"><%= @errors[:password] %></p>
      <input type="password" name="password_confirmation" placeholder="Password confirmation">
      <p class="danger"><%= @errors[:password_confirmation] %></p>
      <button>Sign Up</button>

    <% end %>

  </div>
</div>
